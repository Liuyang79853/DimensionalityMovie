<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.HomePageActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>

    <RadioGroup
        android:id="@+id/rg_main_radioGroup"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#1c2243">

        <RadioButton
            android:id="@+id/rb_main_movie"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/radioselect"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_44"
            android:button="@null"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_main_cinema"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/radioselect1"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_106"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/rb_main_my"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/radioselect2"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_90"
            android:button="@null"/>

    </RadioGroup>

</LinearLayout>